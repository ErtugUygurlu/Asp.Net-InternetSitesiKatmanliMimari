@model IEnumerable<CodeFirstKatmanliMimari.Models.ArticleByCategory>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <div class="section-title text-center">
                <h4 class="text-uppercase">Travel</h4>
            </div>

            @foreach (var item in Model)
            {
                <div class="single-post-item mb-50">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-post">
                                <div class="single-post-img">
                                    <img src="@item.ImageUrl" alt="" />
                                </div>
                                <div class="single-post-text">
                                    <a href="#"><h3>@item.Title</h3></a>
                                    <ul>
                                        <li><a href="#"><i class="fa fa-clock-o"></i> @item.ArticleDate</a></li>
                                        <li><a href="#"><i class="fa fa-pencil"></i> @item.AuthorName</a></li>
                                        <li><a href="#"><i class="fa fa-eye"></i> @item.ArticleReading</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-post-right">
                                <a href="#" class="post-category"><h3>@item.ArticleCategory</h3></a>
                                <a href="#"><h4>@item.Title</h4></a>
                                @if (item.Content.ToString().Length > 250)
                                {
                                    <p>@item.Content.Substring(0, 250)...<a style="color:crimson" href="@CodeFirstKatmanliMimari.Utils.UrlDuzenleme.UrlCevir(item.ArticleCategory).ToLower()/@item.ArticleUrl "> Devamını Oku </a> </p>
                                }
                                else
                                {
                                    <p>
                                        @item.Content.
                                    </p>
                                }

                                <a href="@CodeFirstKatmanliMimari.Utils.UrlDuzenleme.UrlCevir(item.ArticleCategory).ToLower()/@item.ArticleUrl" class="post-top-btn m-0">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="single-post-item mb-50">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-post-left">
                                <a href="#" class="post-category"><h3>Travel</h3></a>
                                <a href="#"><h4>We Enhance Our New Florida</h4></a>
                                <p>Print this page to PDF for the complete set of  your vectors. Or to use on the desktop, intall font in your FontAwesome.otf, set it as the font in your your application, and copy and paste the icons (not the unicode)   </p>
                                <a href="#" class="post-top-btn m-0">Continue Read</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-post">
                                <div class="single-post-img">
                                    <img src="~/Content/img/blog/1.jpg" alt="" />
                                </div>
                                <div class="single-post-text">
                                    <a href="#"><h3>We Enhance Our New florida</h3></a>
                                    <ul>
                                        <li><a href="#"><i class="fa fa-clock-o"></i> Aug 8,2016</a></li>
                                        <li><a href="#"><i class="fa fa-commenting-o"></i> 500</a></li>
                                        <li><a href="#"><i class="fa fa-eye"></i> 1928</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="single-post-item mb-50">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
